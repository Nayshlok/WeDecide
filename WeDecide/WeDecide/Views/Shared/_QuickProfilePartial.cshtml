@using WeDecide.Models.Concrete
@model WeDecide.ViewModels.ProfileViewModel

<div class="quick-profile-view">
    <div class="profile_pic shadowed" style="background-image: url(@Model.ImagePath), url(/Images/placeholder-headshot.jpg)"></div>
    <div class="info-panel shadowed">
        <h2 class="small-header">Friends</h2>
        @if (Model != null && Model.UserFriends != null)
        {
            foreach (User f in Model.UserFriends)
            {
                <div class="friend-thumb" title="@f.Name" style="background-image: url(@f.ImagePath), url(/Images/placeholder-headshot.jpg)"></div>
            }
        }
    </div>
</div>
