@model WeDecide.ViewModels.ProfileViewModel

<div class="overlay-box">
    <div id="editBox" class="white_content">
        <header>
            <h2>Edit Your Profile</h2>
        </header>
        <div>
            @using (Html.BeginForm("UpdateProfile", "Profile"))
            {
                <div class="form-group">
                    <label for="nameEdit">Name</label>
                    @Html.ValidationMessageFor(x => x.UserName)
                    @Html.TextBoxFor(x => x.UserName, new { @id = "nameEdit", @class = "form-control", @name = "nameEdit", @placeholder = "Ex: John Doe" })
                </div>
                <input class="bottom-btn btn btn-default" type="submit" value="Update Profile" />
            }
        </div>
    </div>
    <section id="fade" class="black_overlay"></section>
</div>
