<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <header>
        <h2>@Html.ActionLink("WeDecide", "Index", "Home")</h2>
        <nav>
            <ul>
                <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                <li>@Html.ActionLink("Friends", "Index", "Friends")</li>
            </ul>
        </nav>
        <div class="icons">
            <i class="fa fa-power-off"></i>
        </div>
        <div class="profile-pic-thumb"></div>
    </header>

    <section class="main">
        @RenderBody()
    </section>

    <footer class="fixed-footer">
        <p>&copy; @DateTime.Now.Year  - WeDecide</p>
    </footer>

    @Scripts.Render("~/Scripts/jquery-1.11.2.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
    @Scripts.Render("~/Scripts/MakeQuestion.js")
    @RenderSection("scripts", required: false)
</body>
</html>