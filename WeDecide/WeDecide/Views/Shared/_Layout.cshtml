<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    @Scripts.Render("~/Scripts/modernizr-2.6.2.js")
    @Scripts.Render("~/Scripts/jquery")
</head>
<body>
    <header class="fixed-header shadowed">
        <h2>@Html.ActionLink("WeDecide", "Index", "Home")</h2>
        <nav>
            <ul>
                <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                <li>@Html.ActionLink("People", "Index", "Friends")</li>
            </ul>
        </nav>
        <div class="icons">
            @using (Html.BeginForm("LogOff", "Account"))
            {
                <i class="fa fa-sign-out" title="Log Out" onclick="javascript:this.parentNode.submit();"></i>
            }
        </div>
        <div class="profile-pic-thumb"></div>
    </header>

    <section class="main">
        @RenderBody()
    </section>

    <footer>
        <p>&copy; @DateTime.Now.Year  - WeDecide</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>