@model WeDecide.ViewModels.QuestionViewModel

@using (Html.BeginForm())
{
    <label>Question Text: </label>@Html.TextBoxFor(x => x.Question)
    <br/>
    <ul>
        @for (int i = 0; i < 2; i++)
        {
        <li>
            <label>Response: </label>
            <input type="text" name="Responses" />
        </li>
        }
    </ul>

    <input type="datetime" name="EndDate"/>
    
    <input type="submit" value="Make Question"/>
}